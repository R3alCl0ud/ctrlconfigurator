{
  "name": "drop_ctrl_configurator",
  "version": "1.0.0",
  "description": "An application that is ass",
  "main": "src/main.js",
  "build": {
    "appId": "ctrlconfigurator",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "pacman",
        "tar.xz",
        "deb"
      ],
      "maintainer": "R3alCl0ud",
      "icon": "build/icon256x256.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon256x256.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder -w",
    "build-linux": "electron-builder -l"
  },
  "repository": "https://github.com/r3alcl0ud/ctrlconfigurator",
  "keywords": [
    "Application",
    "quick",
    "ctrl",
    "drop",
    "configurator"
  ],
  "author": "Perry 'R3alCl0ud' Berman",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {
    "electron-pug": "^2.0.0",
    "fs-extra": "^9.0.1",
    "jquery": "^3.5.1",
    "pug": "^2.0.4",
    "zip-a-folder": "0.0.12"
  }
}
